<% if resource.errors.any? %>
  <% messages = [] %>
  <% type = "error" %>
  <% resource.errors.full_messages.each do |text_message| %>
    <% messages << text_message %>
  <% end %>
  <% if messages.count > 0 %>
    <script type="text/javascript">
      toastr['<%= type %>']('<%= messages.join(', ') %>');
    </script>
  <% end%>
<% end %>
